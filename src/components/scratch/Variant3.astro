---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import profilePic from "../../assets/2024_profile_pic.jpg";
import { identity, profileSections } from "../../data/profiles";
---

<article class="v3-terminal" role="article" aria-label="Contact terminal">
  <header class="v3-terminal-head">
    <p><span>visitor</span>@bjesuiter ~ % ./open-contact-card</p>
    <h1>{identity.name}</h1>
    <p>{identity.tagline}</p>
  </header>

  <Image
    src={profilePic}
    alt={identity.imageAlt}
    class="v3-avatar"
    loading="lazy"
  />

  <section class="v3-stream">
    {
      profileSections.map((section, index) => (
        <section class="v3-chunk" style={`--chunk-delay:${index * 120}ms;`}>
          <p class="v3-line">$ cat ./profiles/{section.id}.md</p>
          <h2>{section.title}</h2>
          <p>{section.description}</p>
          <ul>
            {section.links.map((link) => (
              <li>
                <a href={link.href} target="_blank" rel="noreferrer">
                  <Icon name={link.icon} />
                  <span>{link.label}</span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </section>
</article>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=VT323&display=swap");

  .v3-terminal {
    position: relative;
    z-index: 1;
    width: min(1100px, 100%);
    margin: 0 auto;
    border: 1px solid rgba(163, 230, 53, 0.35);
    background: rgba(5, 46, 22, 0.35);
    box-shadow: inset 0 0 0 1px rgba(187, 247, 208, 0.13);
    padding: clamp(0.9rem, 2vw, 1.3rem);
    backdrop-filter: blur(2px);
  }

  .v3-terminal-head p:first-child {
    color: #d9f99d;
    margin-bottom: 0.5rem;
    font-size: 0.93rem;
    font-family: "Share Tech Mono", monospace;
  }

  .v3-terminal-head p:first-child span {
    color: #86efac;
  }

  .v3-terminal-head h1 {
    font-family: "VT323", monospace;
    font-size: clamp(2.1rem, 6vw, 4.1rem);
    letter-spacing: 0.03em;
    line-height: 0.9;
    margin-bottom: 0.65rem;
    color: #dcfce7;
  }

  .v3-terminal-head p:last-child {
    color: #bbf7d0;
    max-width: 60ch;
    font-family: "Share Tech Mono", monospace;
  }

  .v3-avatar {
    width: clamp(94px, 10vw, 136px);
    aspect-ratio: 1;
    object-fit: cover;
    object-position: top;
    border: 1px solid rgba(190, 242, 100, 0.45);
    margin: 1rem 0 1.2rem;
    filter: grayscale(0.2) contrast(1.1) brightness(0.88);
  }

  .v3-stream {
    display: grid;
    gap: 0.9rem;
  }

  .v3-chunk {
    border: 1px solid rgba(163, 230, 53, 0.32);
    background: rgba(20, 83, 45, 0.2);
    padding: 0.8rem;
    animation: v3-flicker 320ms ease both;
    animation-delay: var(--chunk-delay, 0ms);
  }

  .v3-line {
    color: #84cc16;
    margin-bottom: 0.45rem;
    font-family: "Share Tech Mono", monospace;
  }

  .v3-chunk h2 {
    font-family: "VT323", monospace;
    font-size: clamp(1.5rem, 4vw, 2rem);
    line-height: 1;
    margin-bottom: 0.4rem;
    color: #ecfccb;
  }

  .v3-chunk > p {
    color: #bbf7d0;
    line-height: 1.5;
    margin-bottom: 0.6rem;
    max-width: 72ch;
    font-family: "Share Tech Mono", monospace;
  }

  .v3-chunk ul {
    display: grid;
    gap: 0.45rem;
  }

  .v3-chunk a {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    width: fit-content;
    color: #dcfce7;
    transition: color 160ms ease;
    font-family: "Share Tech Mono", monospace;
  }

  .v3-chunk a:hover {
    color: #ecfccb;
  }

  .v3-chunk a::before {
    content: "->";
    color: #84cc16;
    margin-right: 0.2rem;
  }

  .v3-chunk svg {
    font-size: 0.95rem;
    color: #bef264;
  }

  @keyframes v3-flicker {
    from {
      opacity: 0;
      filter: brightness(1.6);
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      filter: brightness(1);
      transform: translateY(0);
    }
  }
</style>
