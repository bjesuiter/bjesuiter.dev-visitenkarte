---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import profilePic from "../../assets/2024_profile_pic.jpg";
import { identity, profileSections } from "../../data/profiles";
---

<article class="v5-pass">
  <header class="v5-header">
    <div>
      <h1>{identity.name}</h1>
      <p>{identity.tagline}</p>
    </div>
    <Image src={profilePic} alt={identity.imageAlt} loading="lazy" />
  </header>

  <section class="v5-rows" aria-label="Profiles">
    {
      profileSections.map((section, sectionIndex) => (
        <section class="v5-row" style={`--line:${sectionIndex};`}>
          <aside>
            <h2>{section.title}</h2>
            <p>{section.description}</p>
          </aside>
          <ul>
            {section.links.map((link) => (
              <li>
                <a href={link.href} target="_blank" rel="noreferrer">
                  <Icon name={link.icon} />
                  <span>{link.label}</span>
                  <span aria-hidden="true">open</span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </section>
</article>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@500;600;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&display=swap");

  .v5-pass {
    width: min(1140px, 100%);
    margin: 0 auto;
    border-radius: 22px;
    overflow: hidden;
    border: 1px solid rgba(167, 243, 208, 0.24);
    background:
      linear-gradient(90deg, rgba(220, 252, 231, 0.04) 1px, transparent 1px) 0
        0 / 25px 100%,
      linear-gradient(0deg, rgba(220, 252, 231, 0.03) 1px, transparent 1px) 0
        0 / 100% 25px,
      linear-gradient(135deg, rgba(7, 30, 24, 0.95), rgba(5, 24, 19, 0.84));
    box-shadow: 0 24px 52px rgba(1, 10, 7, 0.55);
  }

  .v5-header {
    display: flex;
    justify-content: space-between;
    gap: 0.8rem;
    align-items: flex-end;
    padding: clamp(1rem, 2.2vw, 1.5rem);
    border-bottom: 1px dashed rgba(167, 243, 208, 0.28);
  }

  .v5-header h1 {
    font-family: "Fraunces", serif;
    font-size: clamp(1.8rem, 5vw, 3.2rem);
    line-height: 0.98;
    margin-bottom: 0.45rem;
    text-wrap: balance;
    color: #ecfdf5;
  }

  .v5-header p {
    font-family: "Chakra Petch", sans-serif;
    font-size: 0.95rem;
    max-width: 54ch;
    color: #d1fae5;
  }

  .v5-header img {
    width: clamp(86px, 9.4vw, 122px);
    aspect-ratio: 1 / 1;
    object-fit: cover;
    object-position: top;
    border-radius: 14px;
    border: 1px solid rgba(209, 250, 229, 0.42);
    flex-shrink: 0;
  }

  .v5-rows {
    display: grid;
  }

  .v5-row {
    display: grid;
    grid-template-columns: minmax(220px, 310px) minmax(0, 1fr);
    border-bottom: 1px dashed rgba(167, 243, 208, 0.18);
    animation: v5-enter 420ms ease both;
    animation-delay: calc(var(--line) * 90ms);
  }

  .v5-row:last-child {
    border-bottom: 0;
  }

  .v5-row aside {
    padding: 0.95rem;
    border-right: 1px dashed rgba(167, 243, 208, 0.18);
  }

  .v5-row h2 {
    font-family: "Fraunces", serif;
    font-size: clamp(1.15rem, 2vw, 1.45rem);
    margin: 0.3rem 0 0.5rem;
    line-height: 1.2;
    color: #ecfdf5;
  }

  .v5-row aside p {
    font-family: "Chakra Petch", sans-serif;
    line-height: 1.45;
    color: #bdeed8;
  }

  .v5-row ul {
    padding: 0.95rem;
    display: grid;
    gap: 0.45rem;
  }

  .v5-row a {
    display: grid;
    align-items: center;
    gap: 0.6rem;
    grid-template-columns: auto 1fr auto;
    font-family: "Chakra Petch", sans-serif;
    padding: 0.4rem 0.55rem;
    border-radius: 10px;
    border: 1px solid rgba(134, 239, 172, 0.28);
    background: rgba(2, 20, 15, 0.42);
    color: #eafff5;
    transition: border-color 170ms ease;
  }

  .v5-row a:hover {
    border-color: #6ee7b7;
  }

  .v5-row svg {
    color: #6ee7b7;
    font-size: 1.05rem;
  }

  .v5-row a span:last-child {
    text-transform: uppercase;
    font-size: 0.65rem;
    letter-spacing: 0.08em;
    color: #a7f3d0;
  }

  @keyframes v5-enter {
    from {
      opacity: 0;
      transform: translateY(12px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 900px) {
    .v5-row {
      grid-template-columns: 1fr;
    }

    .v5-row aside {
      border-right: 0;
      border-bottom: 1px dashed rgba(167, 243, 208, 0.18);
    }

    .v5-header {
      align-items: center;
    }
  }
</style>
