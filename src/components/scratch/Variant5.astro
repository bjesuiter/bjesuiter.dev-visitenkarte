---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import profilePic from "../../assets/2024_profile_pic.jpg";
import {
  getLocalizedProfileContent,
  type SupportedLocale,
} from "../../data/profiles";

interface Props {
  locale?: SupportedLocale;
  supportHref?: string;
}

const { locale = "de", supportHref = "/support" } = Astro.props;
const { identity, profileSections, supportCta } =
  getLocalizedProfileContent(locale);
const profileAriaLabel = locale === "de" ? "Profile" : "Profiles";
---

<article class="v5-pass">
  <header class="v5-header">
    <Image
      src={profilePic}
      alt={identity.imageAlt}
      loading="lazy"
      class="v5-hero-bg"
    />
    <div class="v5-header-copy">
      <h1>{identity.name}</h1>
      <p>{identity.tagline}</p>
    </div>
  </header>

  <section class="v5-rows" aria-label={profileAriaLabel}>
    {
      profileSections.map((section, sectionIndex) => (
        <section class="v5-row" style={`--line:${sectionIndex};`}>
          <aside>
            <h2>{section.title}</h2>
            <p>{section.description}</p>
          </aside>
          <ul>
            {section.links.map((link) => (
              <li>
                <a href={link.href} target="_blank" rel="noreferrer">
                  <Icon name={link.icon} />
                  <span>{link.label}</span>
                  <span aria-hidden="true">open</span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </section>

  <section class="v5-verification" aria-label="Verification">
    <h2>Verification</h2>
    <p>
      With this website it's possible to proof that i own the domains and social
      accounts i say. It uses atproto under the hood
    </p>
    <a href="https://keytrace.dev/@bjesuiter.de" target="_blank" rel="noreferrer">
      keytrace.dev/@bjesuiter.de
    </a>
  </section>

  <section class="v5-support" aria-label={supportCta.ariaLabel}>
    <h2>{supportCta.title}</h2>
    <p>{supportCta.description}</p>
    <a href={supportHref}>{supportCta.linkLabel}</a>
  </section>
</article>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@500;600;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&display=swap");

  .v5-pass {
    width: min(1140px, 100%);
    margin: 0 auto;
    border-radius: 22px;
    overflow: hidden;
    border: 1px solid rgba(167, 243, 208, 0.24);
    background:
      linear-gradient(90deg, rgba(220, 252, 231, 0.02) 1px, transparent 1px) 0
        0 / 34px 100%,
      linear-gradient(0deg, rgba(220, 252, 231, 0.015) 1px, transparent 1px) 0
        0 / 100% 34px,
      linear-gradient(135deg, rgba(7, 30, 24, 0.95), rgba(5, 24, 19, 0.84));
    box-shadow: 0 24px 52px rgba(1, 10, 7, 0.55);
  }

  .v5-pass :where(h1, h2, p) {
    text-wrap: balance;
  }

  .v5-header {
    position: relative;
    isolation: isolate;
    display: grid;
    align-items: end;
    padding: clamp(1.1rem, 3.8vw, 2rem);
    min-height: clamp(320px, 78vw, 440px);
    border-bottom: 1px dashed rgba(167, 243, 208, 0.28);
    overflow: hidden;
  }

  .v5-header::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(3, 16, 12, 0.02) 0%,
      rgba(3, 16, 12, 0.1) 42%,
      rgba(3, 16, 12, 0.46) 72%,
      rgba(3, 16, 12, 0.86) 100%
    );
  }

  .v5-hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    opacity: 1;
    filter: saturate(0.9) contrast(1.03);
    z-index: 0;
    pointer-events: none;
  }

  .v5-header-copy {
    position: relative;
    z-index: 2;
    max-width: 54ch;
    text-align: center;
  }

  .v5-header h1 {
    font-family: "Fraunces", serif;
    font-size: clamp(2rem, 6.2vw, 3.4rem);
    line-height: 0.96;
    margin-bottom: 0.5rem;
    text-wrap: balance;
    color: #ecfdf5;
  }

  .v5-header p {
    font-family: "Chakra Petch", sans-serif;
    font-size: clamp(0.95rem, 2vw, 1.15rem);
    line-height: 1.5;
    max-width: 34ch;
    margin-inline: auto;
    text-align: center;
    text-wrap: balance;
    color: #d1fae5;
  }

  .v5-rows {
    display: grid;
  }

  .v5-row {
    display: grid;
    grid-template-columns: 1fr;
    border-bottom: 1px dashed rgba(167, 243, 208, 0.18);
    animation: v5-enter 420ms ease both;
    animation-delay: calc(var(--line) * 90ms);
  }

  .v5-row:last-child {
    border-bottom: 0;
  }

  .v5-verification {
    display: grid;
    gap: 0.85rem;
    padding: clamp(1.2rem, 3vw, 1.8rem);
    border-top: 1px dashed rgba(167, 243, 208, 0.2);
    background:
      radial-gradient(
        circle at 90% 20%,
        rgba(110, 231, 183, 0.12),
        transparent 30%
      ),
      linear-gradient(120deg, rgba(5, 26, 20, 0.92), rgba(5, 30, 22, 0.72));
  }

  .v5-verification h2 {
    font-family: "Fraunces", serif;
    font-size: clamp(1.2rem, 2vw, 1.55rem);
    color: #ecfdf5;
    line-height: 1.1;
  }

  .v5-verification p {
    font-family: "Chakra Petch", sans-serif;
    color: #c9f7e3;
    max-width: 60ch;
    line-height: 1.5;
  }

  .v5-verification a {
    width: fit-content;
    font-family: "Chakra Petch", sans-serif;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: #d9f9ec;
    border-radius: 999px;
    padding: 0.55rem 1.05rem;
    border: 1px solid rgba(110, 231, 183, 0.5);
    background: rgba(3, 24, 18, 0.6);
    transition:
      transform 170ms ease,
      border-color 170ms ease;
  }

  .v5-verification a:hover {
    transform: translateY(-1px);
    border-color: #6ee7b7;
  }

  .v5-support {
    display: grid;
    gap: 0.9rem;
    padding: clamp(1.2rem, 3vw, 1.8rem);
    border-top: 1px dashed rgba(167, 243, 208, 0.2);
    background:
      radial-gradient(
        circle at 10% 10%,
        rgba(110, 231, 183, 0.14),
        transparent 28%
      ),
      linear-gradient(120deg, rgba(4, 24, 18, 0.9), rgba(5, 30, 22, 0.7));
  }

  .v5-support h2 {
    font-family: "Fraunces", serif;
    font-size: clamp(1.3rem, 2.2vw, 1.7rem);
    color: #ecfdf5;
    line-height: 1.1;
  }

  .v5-support p {
    font-family: "Chakra Petch", sans-serif;
    color: #c9f7e3;
    max-width: 58ch;
    line-height: 1.5;
  }

  .v5-support a {
    width: fit-content;
    font-family: "Chakra Petch", sans-serif;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: #032015;
    background: linear-gradient(90deg, #6ee7b7, #34d399);
    border-radius: 999px;
    padding: 0.62rem 1.05rem;
    border: 1px solid rgba(255, 255, 255, 0.24);
    box-shadow: 0 8px 26px rgba(0, 0, 0, 0.26);
    transition:
      transform 170ms ease,
      filter 170ms ease;
  }

  .v5-support a:hover {
    transform: translateY(-1px);
    filter: brightness(1.06);
  }

  .v5-row aside {
    padding: 1.35rem 1.35rem 0.75rem;
    border-right: 0;
    border-bottom: 0;
  }

  .v5-row h2 {
    font-family: "Fraunces", serif;
    font-size: clamp(1.15rem, 2vw, 1.45rem);
    margin: 0.3rem 0 0.6rem;
    line-height: 1.2;
    color: #ecfdf5;
  }

  .v5-row aside p {
    font-family: "Chakra Petch", sans-serif;
    line-height: 1.5;
    color: #bdeed8;
  }

  .v5-row ul {
    padding: 0.7rem 1.35rem 1.35rem;
    display: grid;
    gap: 0.65rem;
  }

  .v5-row a {
    display: grid;
    align-items: center;
    gap: 0.6rem;
    grid-template-columns: auto 1fr auto;
    font-family: "Chakra Petch", sans-serif;
    padding: 0.65rem 0.8rem;
    border-radius: 12px;
    border: 1px solid rgba(134, 239, 172, 0.28);
    background: rgba(2, 20, 15, 0.42);
    color: #eafff5;
    transition: border-color 170ms ease;
  }

  .v5-row a:hover {
    border-color: #6ee7b7;
  }

  .v5-row svg {
    color: #6ee7b7;
    font-size: 1.05rem;
    width: 1.05rem;
    min-width: 1.05rem;
    height: 1.05rem;
  }

  .v5-row a span:last-child {
    display: none;
    text-transform: uppercase;
    font-size: 0.65rem;
    letter-spacing: 0.08em;
    color: #a7f3d0;
  }

  @media (min-width: 380px) {
    .v5-row a span:last-child {
      display: block;
    }
  }

  @keyframes v5-enter {
    from {
      opacity: 0;
      transform: translateY(12px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 641px) {
    .v5-header {
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
      align-items: center;
      min-height: clamp(360px, 50vw, 460px);
      padding: clamp(1.25rem, 3.2vw, 2rem);
    }

    .v5-header::before {
      display: block;
      background: linear-gradient(
        90deg,
        rgba(3, 16, 12, 0.18) 0%,
        rgba(3, 16, 12, 0.12) 42%,
        rgba(3, 16, 12, 0.22) 52%,
        rgba(3, 16, 12, 0.08) 66%,
        rgba(3, 16, 12, 0) 82%
      );
    }

    .v5-header-copy {
      grid-column: 1;
      align-self: center;
      text-align: left;
      max-width: 30ch;
      padding-right: clamp(0.5rem, 1.8vw, 1.25rem);
    }

    .v5-header p {
      max-width: 24ch;
      margin-inline: 0;
      text-align: left;
    }

    .v5-hero-bg {
      inset: 0 0 0 auto;
      width: 50%;
      object-position: center 10%;
      opacity: 1;
    }
  }

  @media (min-width: 951px) {
    .v5-hero-bg {
      top: 1rem;
      right: 1rem;
      bottom: auto;
      left: auto;
      width: min(420px, calc(46% - 1rem));
      height: calc(100% - 2rem);
      border-radius: 18px;
      object-position: center 12%;
    }
  }

</style>
