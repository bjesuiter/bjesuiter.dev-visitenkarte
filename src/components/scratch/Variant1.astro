---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import profilePic from "../../assets/2024_profile_pic.jpg";
import { identity, profileSections } from "../../data/profiles";
---

<article class="v1-card">
  <header class="v1-head v1-pop" style="--delay: 30ms;">
    <p class="v1-kicker">Physical Contact Card / Neo Brutal</p>
    <h1>{identity.name}</h1>
    <p>{identity.tagline}</p>
    <Image src={profilePic} alt={identity.imageAlt} loading="lazy" />
  </header>

  <section class="v1-grid" aria-label="Profiles">
    {
      profileSections.map((section, sectionIndex) => (
        <section
          class="v1-block v1-pop"
          style={`--delay: ${120 + sectionIndex * 90}ms;`}
        >
          <h2>{section.title}</h2>
          <p>{section.description}</p>
          <ul>
            {section.links.map((link, linkIndex) => (
              <li style={`--delay: ${180 + linkIndex * 45}ms;`}>
                <a href={link.href} target="_blank" rel="noreferrer">
                  <Icon name={link.icon} />
                  <span>{link.label}</span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </section>
</article>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Archivo:wght@500;700&family=Bungee&display=swap");

  .v1-card {
    width: min(1140px, 100%);
    margin: 0 auto;
    border: 4px solid #111827;
    box-shadow: 14px 14px 0 #111827;
    background: #ffffff;
    padding: clamp(1rem, 2vw, 2rem);
  }

  .v1-head {
    position: relative;
    border: 4px solid #111827;
    background: linear-gradient(135deg, #fef3c7, #ffffff 55%);
    padding: clamp(1rem, 2vw, 1.5rem);
    margin-bottom: 1rem;
  }

  .v1-head h1 {
    font-family: "Bungee", sans-serif;
    font-size: clamp(1.8rem, 5vw, 3rem);
    line-height: 1.05;
    margin-bottom: 0.4rem;
    text-wrap: balance;
    color: #111827;
  }

  .v1-head p,
  .v1-head .v1-kicker {
    font-family: "Archivo", sans-serif;
    font-size: 1rem;
    max-width: 66ch;
    color: #111827;
  }

  .v1-head .v1-kicker {
    display: inline-block;
    margin-bottom: 0.7rem;
    background: #111827;
    color: #f9fafb;
    padding: 0.2rem 0.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-size: 0.7rem;
  }

  .v1-head img {
    position: absolute;
    width: clamp(110px, 18vw, 190px);
    aspect-ratio: 1;
    object-fit: cover;
    object-position: top;
    border-radius: 16px;
    border: 4px solid #111827;
    right: clamp(0.8rem, 1.2vw, 1.3rem);
    bottom: -1.7rem;
    rotate: -6deg;
    box-shadow: 10px 10px 0 #111827;
  }

  .v1-grid {
    display: grid;
    gap: 1rem;
    margin-top: 3rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .v1-block {
    border: 3px solid #111827;
    background: #f8fafc;
    padding: 1rem;
    transition: transform 140ms ease;
  }

  .v1-block:nth-child(odd) {
    background: #dbeafe;
  }

  .v1-block:nth-child(2n) {
    background: #e0f2fe;
  }

  .v1-block:hover {
    transform: translate(-4px, -4px);
    box-shadow: 6px 6px 0 #111827;
  }

  .v1-block h2 {
    font-family: "Bungee", sans-serif;
    font-size: 1.2rem;
    margin-bottom: 0.45rem;
    line-height: 1.25;
    color: #111827;
  }

  .v1-block > p {
    font-family: "Archivo", sans-serif;
    font-size: 0.95rem;
    margin-bottom: 0.8rem;
    color: #1f2937;
  }

  .v1-block ul {
    display: grid;
    gap: 0.6rem;
  }

  .v1-block li a {
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    border: 2px solid #111827;
    padding: 0.42rem 0.65rem;
    background: #ffffff;
    font-family: "Archivo", sans-serif;
    font-weight: 700;
    line-height: 1.2;
    color: #111827;
    transition: translate 130ms ease;
  }

  .v1-block li a:hover {
    translate: 5px 0;
    background: #fde68a;
  }

  .v1-block li svg {
    font-size: 1.2rem;
  }

  .v1-pop {
    opacity: 0;
    animation: v1-pop 440ms cubic-bezier(0.23, 1.18, 0.36, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes v1-pop {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.98);
    }

    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @media (max-width: 680px) {
    .v1-head {
      padding-bottom: 6.4rem;
    }

    .v1-head img {
      bottom: 1rem;
      right: 1rem;
      rotate: -4deg;
    }

    .v1-grid {
      margin-top: 1.1rem;
    }
  }
</style>
