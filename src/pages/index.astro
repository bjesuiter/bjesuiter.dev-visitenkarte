---
import Variant5 from "../components/scratch/Variant5.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="bjesuiter.dev">
  <main class="base-v5-shell">
    <Variant5 />
  </main>
</Layout>

<style>
  .base-v5-shell {
    min-height: 100vh;
    padding: clamp(1rem, 2.4vw, 2.1rem);
    background:
      linear-gradient(0deg, rgba(6, 9, 21, 0.93), rgba(6, 9, 21, 0.93)),
      radial-gradient(circle at 82% 12%, rgba(56, 189, 248, 0.38), transparent 30%),
      radial-gradient(circle at 12% 88%, rgba(250, 204, 21, 0.28), transparent 30%),
      #030712;
  }
</style>
